<GridView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movieGrid"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:columnWidth="@dimen/movie_grid_column_width"
    android:numColumns="auto_fit"
    android:stretchMode="columnWidth"
    android:gravity="center"
    android:verticalSpacing="@dimen/movie_grid_vertical_spacing"
    android:horizontalSpacing="@dimen/movie_grid_horizontal_spacing"
    tools:context=".MovieGridFragment"
    tools:showIn="@layout/activity_main"
    android:background="@android:color/background_dark">

</GridView>
